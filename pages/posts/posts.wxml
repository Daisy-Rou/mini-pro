<!--文章列表页面pages/posts/posts.wxml-->
<view>
  <swiper indicator-dots="{{true}}" autoplay="{{true}}" circular>
    <swiper-item>
      <!-- 插槽的作用 -->
      <image data-post-id="{{3}}" bind:tap="goToDetail" src="/images/padx.png"></image>
    </swiper-item>
    <swiper-item>
      <image data-post-id="{{7}}" bind:tap="goToDetail" src="/images/dog.png"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/cat.png"></image>
    </swiper-item>
  </swiper>
  <block wx:for="{{postList}}" wx:for-item="item" wx:key="index">
    <!-- 自定义数据 -->
    <view bind:tap="goToDetail" data-post-id="{{item.postId}}" class="post-container">
      <view class="post-author-date">
        <image class="post-author" src="{{item.avatar}}"></image>
        <text class="post-date">{{item.date}}</text>
      </view>
      <!-- // 小程序单向数据绑定 -->
      <text class="post-title">{{item.title}}</text>
      <image class="post-image" src="{{item.imgSrc}}"></image>
      <text class="post-content">{{item.content}}</text>
      <view class="post-like">
        <!-- <image class="post-like-image" src="/images/dog.png"></image> -->
        <l-icon class="post-like-image" name="favor" size="28" color="#666"></l-icon>
        <text class="post-like-font">{{item.collection}}</text>
        <!-- <image class="post-like-image" src="/images/girl.png"></image> -->
        <l-icon class="post-like-image" name="eye" size="32" color="#666"></l-icon>
        <text class="post-like-font">{{item.reading}}</text>
      </view>
    </view>
  </block>
</view>