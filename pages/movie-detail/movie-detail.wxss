/* 电影详情页面pages/movie-detail/movie-detail.wxss */
.container-movie {
  display: flex;
  flex-direction: column;
  width: 100%;
}
.head-image {
  width: 100%;
  height: 320rpx;
  /* 图片模糊效果 */
  -webkit-filter: blur(20px);
}
.movie-image {
  height: 238rpx;
  width: 175rpx;
  position: absolute;
  right: 60rpx;
  top: 160rpx;
}
.head-img-hover {
  width: 100%;
  height: 320rpx;
  position: absolute;
  top: 0;
  left: 40rpx;
  display: flex;
  flex-direction: column;
}
.main-title {
  color: #fff;
  font-size: 38rpx;
  font-weight: bold;
  margin-top: 50rpx;
  letter-spacing: 2px;
}
.sub-title {
  color: #fff;
  font-size: 28rpx;
  margin-top: 30rpx;
}
.like {
  display: flex;
  margin-top: 30rpx;
}
.high-like-font {
  color: #f21146;
  font-size: 22rpx;
  margin-right: 10rpx;
}
.plain-font {
  font-size: 22rpx;
  margin-right: 30rpx;
}
.summary {
  margin-left: 40rpx;
  margin-top: 40rpx;
  color: #777;
}
.original-title {
  color: #1f3463;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}
.flex-row {
  display: flex;
  flex-direction: row;
  align-items: baseline;
  margin-bottom: 10rpx;
}
.score-container {
  display: flex;
  flex-direction: row;
  align-items: baseline;
}
.mark {
  margin-right: 30rpx;
  white-space: nowrap;
  color: #999;
}
.average {
  margin-left: 20rpx;
}
.hr {
  width: 100%;
  height: 1px;
  background-color: #d9d9d9;
  margin-top: 45rpx;
}
.synopsis {
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
  margin-top: 50rpx;
}
.synopsis-title {
  color: #999;
}
.synopsis-content {
  margin-top: 20rpx;
  margin-right: 40rpx;
  line-height: 40rpx;
  letter-spacing: 1px;
  font-size: 28rpx;
}
.casts {
  display: inline-flex;
  flex-direction: column;
  margin-top: 50rpx;
  margin-left: 40rpx;
}
.cast-font {
  color: #999;
  margin-bottom: 40rpx;
}
.casts-container {
  display: flex;
  margin-bottom: 50rpx;
  height: 300rpx;
}
.cast-container {
  display: flex;
  flex-direction: column;
  margin-right: 40rpx;
  align-items: center;
}
.cast-image {
  width: 170rpx;
  height: 210rpx;
  margin-bottom: 10rpx;
}