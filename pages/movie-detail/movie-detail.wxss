/* 电影详情页面pages/movie-detail/movie-detail.wxss */
.container-movie {
  display: flex;
  flex-direction: column;
  width: 100%;
}
.head-image {
  width: 100%;
  height: 320rpx;
  /* 图片模糊效果 */
  -webkit-filter: blur(20px);
}
.movie-image {
  height: 238rpx;
  width: 175rpx;
  position: absolute;
  right: 60rpx;
  top: 160rpx;
}
.head-img-hover {
  width: 100%;
  height: 320rpx;
  position: absolute;
  top: 0;
  left: 40rpx;
  display: flex;
  flex-direction: column;
}
.main-title {
  color: #fff;
  font-size: 38rpx;
  font-weight: bold;
  margin-top: 50rpx;
  letter-spacing: 2px;
}
.sub-title {
  color: #fff;
  font-size: 28rpx;
  margin-top: 30rpx;
}
.like {
  display: flex;
  margin-top: 30rpx;
}
.high-like-font {
  color: #f21146;
  font-size: 22rpx;
  margin-right: 10rpx;
}
.plain-font {
  font-size: 22rpx;
  margin-right: 30rpx;
}